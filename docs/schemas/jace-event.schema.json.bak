{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/jace-event.schema.json",
  "type": "object",
  "required": [
    "type",
    "id",
    "ts",
    "entity"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "entity": {
      "type": "string"
    },
    "changes": {
      "type": "object",
      "additionalProperties": true
    },
    "recommended_affordances": {
      "type": "array",
      "items": {
        "$ref": "https://example.com/schemas/jace-view.agent.schema.json#/$defs/affordance"
      }
    }
  },
  "additionalProperties": true
}
